
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Desc</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.quantity %></td>
          <td><%= product.price %></td>
          <td>
                <% if product.photo.present? %>
                <%= image_tag(product.photo.image, class: "thumbnail") %>
                <% end %>
          </td>
        </tr>
      <% end %>

    </tbody>

  </table>
